@model List<Dll.Entities.Room>

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    

    <div class="row">
        <div class="col-md-3">
            <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
                <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
                <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="input-group date">
                <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="input-group date">
                <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input class="btn btn-ok" id="btnSearch" type="button" value="Søg.." />
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row" id="roomRow">
            <div class="col-md-2">
                <p><b>Lokale:</b> @item.Name</p>
                <p><b>Afdeling:</b> @item.Department</p>
            </div>
            <div class="col-md-4">
                <p><b>Antal personer:</b> @item.Capacity</p>
                <p><b>Beskrivelse:</b> @item.Description</p>
            </div>
            <div class="col-md-4">
                <p><b>Udstyr:</b></p>
                @foreach (var equipment in item.Equipment)
                {
                    <p>@equipment.Name</p>
                }
            </div>
            <div class="col-md-2">
               
                
                @Html.ActionLink(" ", "../SelectedBooking/Index/", new { item.Id }, new { @class = "glyphicon glyphicon-calendar", id = "btnBook" })

    

            </div>
        </div>
    }
</div>