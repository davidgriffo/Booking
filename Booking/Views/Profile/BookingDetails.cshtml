@model Booking.Models.UsersBookingViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Detaljer for din booking</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Booking.FromDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Booking.FromDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Booking.ToDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Booking.ToDate)

        </dd>




    </dl>

</div>
@using (Html.BeginForm("InviteUsers", "Profile"))
{
    @Html.Hidden("bookingId", Model.Booking.Id)
    <div class="form-group">
        @Html.Label("Inviter personer", htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.ListBox("selectedUsers", new MultiSelectList(Model.Users, "id", "FullName", Model.SelectedIds), new {@class = "js-example-basic-multiple js-states form-control", multiple = "multiple"})
        </div>
    </div>
    <script type="text/javascript">
        $(".js-example-basic-multiple").select2();
    </script>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Inviter" id="btnSearch" class="btn btn-default" />
        </div>
    </div>
}
                      
<p>
    @Html.ActionLink("Ændre", "EditBooking", new {
    id = Model.Booking.Id
}) |
    @Html.ActionLink("Tilbage til oversigt", "Bookings")
</p>